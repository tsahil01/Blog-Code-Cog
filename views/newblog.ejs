<%- include('header'); -%>

<main class="bg-body-tertiary">
  <div
    class="p-3 mt-5 mb-4 rounded-3 border container-fluid p-5"
  >
    <form action="" method="post">
      <div class="form-group mb-4">
        <h2>Heading:</h2>
        <input
          class="form-control form-control-lg"
          name="heading"
          id="form-heading"
          type="text"
          autocomplete="off"
        />
      </div>
      <div class="form-group mb-4">
        <h2>Content:</h2>
        <textarea
          class="form-control"
          id="blog-content"
          name="content"
          rows="8"
          autocomplete="off"
        ></textarea>
      </div>
      <button class="btn btn-light btn-lg" type="submit">Submit</button>
    </form>
  </div>
</main>

<%- include('footer'); -%>
