<%- include('header'); -%>

<main class="bg-dark text-light">
  <div
    class="p-3 mt-5 mb-4 bg-dark text-light rounded-3 border container-fluid p-5"
  >
    <form action="/" method="post">
      <div class="form-group mb-4">
        <h2>Heading:</h2>
        <input
          class="form-control form-control-lg bg-dark text-light"
          name="heading"
          id="form-heading"
          type="text"
        />
      </div>
      <div class="form-group mb-4">
        <h2>Content:</h2>
        <textarea
          class="form-control bg-dark text-light"
          id="blog-content"
          name="content"
          rows="8"
        ></textarea>
      </div>
      <button class="btn btn-light btn-lg" type="button">Submit</button>
    </form>
  </div>
</main>

<%- include('footer'); -%>
